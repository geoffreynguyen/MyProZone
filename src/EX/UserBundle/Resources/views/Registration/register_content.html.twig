{% trans_default_domain 'FOSUserBundle' %}


<form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class=" fos_user_registration_register">
 
<div class="form-group">
        <label class="control-label col-sm-3" for="email">{{ form_label(form.email) }}</label>
        <div class="col-sm-6">
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>
 </div>
 <div class="form-group">
        <label class="control-label col-sm-3" for="username">{{ form_label(form.username) }}</label>
        <div class="col-sm-6">
            {{ form_errors(form.username) }}
            {{ form_widget(form.username) }}
        </div>
 </div>
 <div class="form-group">
        <label class="control-label col-sm-3" for="plainPasswordFirst">{{ form_label(form.plainPassword.first) }}</label>
        <div class="col-sm-6">
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first) }}
        </div>
 </div>
        
 <div class="form-group">
        <label class="control-label col-sm-3" for="plainPasswordSecond">{{ form_label(form.plainPassword.second) }}</label>
            <div class="col-sm-6">
             {{ form_errors(form.plainPassword.second) }}
             {{ form_widget(form.plainPassword.second) }}
            </div>
 </div>
 <div class="form-group">
        <label class="control-label col-sm-3" for="plainPasswordSecond">{{ form_label(form.address) }} :</label>
            <div class="col-sm-6">
             {{ form_errors(form.address) }}
             {{ form_widget(form.address) }}
            </div>
 </div>
      {{ form_rest(form) }}
 <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
            <input class="btn btn-default" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
 </div>
       
</form>
